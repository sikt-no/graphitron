type Query {
    # FILM_LIST is a view without primary key
    # With nullable @orderBy but no @defaultOrder, this should fail validation
    # because when user doesn't provide orderBy, there's no fallback ordering
    filmLists(first: Int, after: String, orderBy: FilmListOrderByInput @orderBy): FilmListConnection
}

type FilmListConnection {
    edges: [FilmListEdge]
    pageInfo: PageInfo
}

type FilmListEdge {
    cursor: String
    node: FilmList
}

type FilmList @table(name: "FILM_LIST") {
    title: String
    description: String
    category: String
}

input FilmListOrderByInput {
    orderByField: FilmListOrderByField!
    direction: OrderDirection!
}

enum FilmListOrderByField {
    TITLE @index(name: "idx_title")
}

enum OrderDirection {
    ASC
    DESC
}
