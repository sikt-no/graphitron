type Query {
    query: Payment @notGenerated
}

type Payment @table {
    staffAndCustomers: [PersonWithAddress] @splitQuery
}

interface PersonWithAddress {
    address: Address @splitQuery
}

type StaffWithEmail implements PersonWithAddress @table(name: "STAFF") {
    address: Address @splitQuery
}

type CustomerWithEmail implements PersonWithAddress @table(name: "CUSTOMER") {
    address: Address @splitQuery
}

type Address @table {
    id: ID
}