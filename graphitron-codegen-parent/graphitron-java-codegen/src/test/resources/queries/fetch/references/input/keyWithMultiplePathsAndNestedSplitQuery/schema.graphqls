type Query {
  query: [Language]
}

type Film @table {
    language: Language @reference(path: {key: "FILM__FILM_LANGUAGE_ID_FKEY"})
}

type Language @table {
  id: ID!
  title: String!
  films(releaseYear: Int @field(name: "RELEASE_YEAR")): [Film] @splitQuery @reference(path: [{key: "FILM__FILM_LANGUAGE_ID_FKEY"}])
}
