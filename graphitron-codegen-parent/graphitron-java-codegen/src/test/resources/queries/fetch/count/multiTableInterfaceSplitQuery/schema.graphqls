type Query {
    query: Payment @notGenerated
}

type Payment @table {
    staffAndCustomers(first: Int = 100, after: String): PersonWithEmailConnection
}

interface PersonWithEmail {
    email: String
}

type Staff implements PersonWithEmail @table(name: "STAFF") {
    email: String
}

type Customer implements PersonWithEmail @table(name: "CUSTOMER") {
    email: String
}

type PersonWithEmailConnection {
    edges: [PersonWithEmailConnectionEdge]
    nodes: [PersonWithEmail!]!
}

type PersonWithEmailConnectionEdge {
    cursor: String
    node: PersonWithEmail
}