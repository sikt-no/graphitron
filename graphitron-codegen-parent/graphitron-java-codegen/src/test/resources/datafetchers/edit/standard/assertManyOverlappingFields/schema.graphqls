type Mutation {
    mutation(in: [FilmActorInput]): ID @mutation(typeName: UPDATE)
}

input FilmActorInput @table(name: "film_actor"){
    id: ID! @nodeId(typeName: "FilmActor")
    filmId: ID! @nodeId(typeName: "Film")
    actor: String @field(name: "actor_id")
}

type FilmActor implements Node @table(name: "film_actor") @node {
    id: ID! @nodeId
}

type Film implements Node @table(name: "film") @node {
    id: ID! @nodeId
}