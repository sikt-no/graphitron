<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>no.sikt</groupId>
        <artifactId>graphitron-example</artifactId>
        <version>${revision}${changelist}</version>
    </parent>

    <artifactId>graphitron-example-spec</artifactId>

    <name>graphitron-example-spec</name>

    <properties>
        <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
        <schemaDirectory>${project.basedir}/src/main/resources/graphql/</schemaDirectory>
        <graphitronDirectivesSchemaDirectory>${project.build.directory}/graphitron/schema</graphitronDirectivesSchemaDirectory>
        <generatedCodePackage>no.sikt.graphitron.example.generated</generatedCodePackage>
        <generatedJooqPackage>${generatedCodePackage}.jooq</generatedJooqPackage>
        <generatedGraphitronPackage>${generatedCodePackage}.graphitron</generatedGraphitronPackage>
        <generatedGraphqlDomainPackage>${generatedCodePackage}.grapqhl</generatedGraphqlDomainPackage>
        <generatedGraphqlDomainAPIPackage>${generatedGraphqlDomainPackage}.api</generatedGraphqlDomainAPIPackage>
        <generatedGraphqlDomainModelPackage>${generatedGraphqlDomainPackage}.model</generatedGraphqlDomainModelPackage>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.graphql-java-kickstart</groupId>
            <artifactId>graphql-java-tools</artifactId>
        </dependency>
        <dependency>
            <groupId>no.sikt</groupId>
            <artifactId>graphitron-common</artifactId>
            <version>${revision}${changelist}</version>
        </dependency>
        <dependency>
            <groupId>no.sikt</groupId>
            <artifactId>graphitron-example-db</artifactId>
            <version>${revision}${changelist}</version>
        </dependency>
        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>8.0.2.Final</version>
        </dependency>
        <dependency>
            <groupId>jakarta.enterprise</groupId>
            <artifactId>jakarta.enterprise.cdi-api</artifactId>
            <version>4.1.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-graphitron-directives-schema</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>graphitron</includeArtifactIds>
                            <outputDirectory>${graphitronDirectivesSchemaDirectory}</outputDirectory>
                            <includes>directives.graphqls</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- GraphQL Codegen Maven plugin -->
            <plugin>
                <groupId>io.github.kobylynskyi</groupId>
                <artifactId>graphql-codegen-maven-plugin</artifactId>
                <version>5.10.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <graphqlSchemas>
                                <rootDir>${schemaDirectory}</rootDir>
                            </graphqlSchemas>
                            <outputDir>${outputDirectory}/graphql-codegen</outputDir>
                            <modelPackageName>${generatedGraphqlDomainModelPackage}</modelPackageName>
                            <apiPackageName>${generatedGraphqlDomainAPIPackage}</apiPackageName>
                            <apiReturnType>java.util.concurrent.CompletableFuture</apiReturnType>
                            <generateDataFetchingEnvironmentArgumentInApis>true</generateDataFetchingEnvironmentArgumentInApis>
                            <fieldsWithResolvers>@splitQuery</fieldsWithResolvers>
                            <modelValidationAnnotation>jakarta.validation.constraints.NotNull</modelValidationAnnotation>
                            <customTypesMapping>
                                <Date>java.time.LocalDate</Date>
                                <Time>java.time.OffsetTime</Time>
                                <DateTime>java.time.OffsetDateTime</DateTime>
                                <BigDecimal>java.math.BigDecimal</BigDecimal>
                                <Duration>org.jooq.types.DayToSecond</Duration>
                                <property>
                                    <name>Int!</name>
                                    <value>Integer</value>
                                </property>
                                <property>
                                    <name>Boolean!</name>
                                    <value>Boolean</value>
                                </property>
                            </customTypesMapping>
                            <parentInterfaces>
                                <queryResolver>graphql.kickstart.tools.GraphQLQueryResolver</queryResolver>
                                <mutationResolver>graphql.kickstart.tools.GraphQLMutationResolver</mutationResolver>
                                <subscriptionResolver>graphql.kickstart.tools.GraphQLSubscriptionResolver</subscriptionResolver>
                                <resolver><![CDATA[graphql.kickstart.tools.GraphQLResolver<{{TYPE}}>]]></resolver>
                            </parentInterfaces>

                            <!-- This sets the relay config to look for a non-existent directive to disable the relay handling. -->
                            <relayConfig>
                                <directiveName>NONE</directiveName>
                            </relayConfig>

                            <generateEqualsAndHashCode>true</generateEqualsAndHashCode>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>no.sikt</groupId>
                <artifactId>graphitron-maven-plugin</artifactId>
                <version>${revision}${changelist}</version>
                <configuration>
                    <schemaFiles>
                        <schemaFile>${schemaDirectory}/schema.graphqls</schemaFile>
                    </schemaFiles>
                    <generatedSchemaCodePackage>${generatedGraphqlDomainPackage}</generatedSchemaCodePackage>
                    <jooqGeneratedPackage>${generatedJooqPackage}</jooqGeneratedPackage>
                    <maxAllowedPageSize>1000</maxAllowedPageSize>
                    <resolverAnnotation>jakarta.enterprise.context.Dependent</resolverAnnotation>
                    <recordValidation>
                        <enabled>true</enabled>
                        <schemaErrorType>UgyldigInput</schemaErrorType>
                    </recordValidation>
                    <outputPackage>${generatedGraphitronPackage}</outputPackage>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-with-graphitron</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>no.sikt</groupId>
                        <artifactId>graphitron-error-handling-jakarta</artifactId>
                        <version>${revision}${changelist}</version>
                    </dependency>
                    <dependency>
                        <groupId>no.sikt</groupId>
                        <artifactId>graphitron-example-db</artifactId>
                        <version>${revision}${changelist}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
