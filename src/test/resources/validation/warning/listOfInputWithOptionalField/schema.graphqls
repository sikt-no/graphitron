type Query {
  inventory(id: ID!): Inventory
}

type Inventory @table {
  id: ID!
  filmsForInputWithListField(inputWithOptionalField: [InputWithOptionalField!]): [Film!]! @splitQuery
}

type Film @table {
  id: ID!
}

input InputWithOptionalField {
  title: String #Optional
  rating: Rating #Optional
}

enum Rating {
  G @mapEnum(name: "G"),
  PG @mapEnum(name: "PG"),
  PG_13 @mapEnum(name: "PG-13"),
  R @mapEnum(name: "R"),
  NC_17 @mapEnum(name: "NC-17")
}
