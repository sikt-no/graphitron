type Query {
  customer(
    id: ID! # Some other input that should not be mapped.
    in: CustomerInput
  ): Customer @service(service: {name: "JOOQ_RECORD_FETCH_SERVICE"})

  customerListed(in: [CustomerInput]): [Customer] @service(service: {name: "JOOQ_RECORD_FETCH_SERVICE"})
}

input CustomerInput @table(name: "CUSTOMER") {
  id: ID!
  firstName: String! @field(name: "FIRST_NAME")
  lastName: String! @field(name: "LAST_NAME")
}

type Customer @table {
  id: ID!
}
