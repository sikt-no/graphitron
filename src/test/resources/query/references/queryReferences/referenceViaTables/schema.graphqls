type Query {
  payment: Payment @notGenerated
}

type Payment @table {
  id: ID!
  #via tables starting from the referring type (PAYMENT): PAYMENT -> RENTAL -> INVENTORY -> FILM
  film: Film! @splitQuery @reference(via: [{table: "RENTAL"}, {table: "INVENTORY"}])
}

type Film @table {
  id: ID!
  title: String!
}