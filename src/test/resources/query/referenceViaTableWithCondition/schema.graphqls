type Query {
  inventory(id: ID!): Inventory
}

type Inventory @table {
  id: ID!
  # join path: INVENTORY -> FILM -> FILM_ACTOR (via condition) -> ACTOR
  mainActors: [Actor!]! @splitQuery @reference(via: [{table: "FILM"}, {table: "FILM_ACTOR", condition: "TEST_FILM_MAIN_ACTOR"}])
}

type Actor @table {
  id: ID!
  lastName: String! @column(name: "LAST_NAME")
}
