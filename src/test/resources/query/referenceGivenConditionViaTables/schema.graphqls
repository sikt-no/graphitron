type Query {
  vurderingsmelding(id: ID!): Vurderingsmelding
}

type Vurderingsmelding @table {
  id: ID!
  # join path: VURDERINGSMELDING -> STUDENT -> PERSON -> PERSON_TELEFON(via condition)
  studentPrivatTelefon: Telefon @splitQuery @reference(
    via: [{table: "STUDENT"}, {table: "PERSON"}],
    condition: "PERSON_TELEFON_PRIVAT")
}

type Telefon implements Node @table(name : "PERSON_TELEFON") {
  id: ID!
  nummer: String! @column(name : "TELEFONNR")
}
