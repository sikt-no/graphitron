}

type Mutation {
  endrePersonInput(input: EndreInput!): ID! @mutationType(typeName: UPDATE)
  endrePerson2Params(input: EndreInput!, etternavn: String): ID! @mutationType(typeName: UPDATE)
  endrePersonInputAndResponse(input: EndreInput!): EndreResponse! @mutationType(typeName: UPDATE)
